{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${WORKING_DIR}/teleclaude/hooks/notification.py --notify"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${WORKING_DIR}/teleclaude/hooks/stop.py --notify --summarize"
          }
        ]
      }
    ]
  }
}
